{
  "name": "claude-agent-browser",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/mcp-bridge/index.js",
  "bin": {
    "claude-agent-browser": "./dist/mcp-bridge/index.js",
    "claude-browser-mcp": "./dist/mcp-bridge/index.js",
    "dealbot-mcp": "./dist/mcp-bridge/index.js",
    "browser-cli": "./dist/cli/cli-runner.js"
  },
  "scripts": {
    "build": "tsc && npm run build:extension",
    "build:extension": "cp -r src/extension/* dist/ && cp src/extension/manifest.json dist/",
    "start": "node dist/mcp-bridge/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:mutation": "stryker run",
    "test:marketplace": "ts-node tests/facebook-marketplace-automated-test.ts",
    "test:dealbot": "./tests/run-dealbot-test.sh",
    "test:20-fields": "ts-node tests/dealbot-20-field-test.ts",
    "test:diagnostic": "ts-node tests/dealbot-diagnostic.ts",
    "test:auto-research": "ts-node tests/auto-research-test.ts",
    "test:multi-location": "./tests/run-multi-location-test.sh test-page",
    "test:multi-location:facebook": "./tests/run-multi-location-test.sh facebook",
    "test:multi-location:full": "./tests/run-multi-location-test.sh full",
    "test:monitor": "ts-node tests/console-monitor.ts",
    "test:analyze": "ts-node tests/extraction-analysis.ts compare",
    "test:report": "ts-node tests/extraction-analysis.ts html test-results/report.html && open test-results/report.html",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "victory-check": "node scripts/victory-check.js",
    "dev": "tsc --watch",
    "email-gauntlet": "ts-node demo-email-gauntlet.ts",
    "postinstall": "npm run build"
  },
  "keywords": [
    "mcp",
    "browser-automation",
    "claude",
    "ai-agent",
    "selenium",
    "puppeteer-alternative"
  ],
  "author": "Claude Code",
  "license": "MIT",
  "description": "AI-powered browser automation agent with MCP integration for Claude Code",
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@stryker-mutator/core": "^9.2.0",
    "@stryker-mutator/jest-runner": "^9.2.0",
    "@types/chrome": "^0.1.24",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.9.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.0.1",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "sql.js": "^1.13.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.67.0",
    "@modelcontextprotocol/sdk": "^1.20.2",
    "@types/nodemailer": "^7.0.3",
    "better-sqlite3": "^11.0.0",
    "clipboardy": "^5.0.0",
    "dotenv": "^17.2.3",
    "hnswlib-node": "^3.0.0",
    "nodemailer": "^7.0.10",
    "playwright": "^1.56.1",
    "twilio": "^5.10.4"
  },
  "optionalDependencies": {
    "@types/better-sqlite3": "^7.6.11"
  }
}
